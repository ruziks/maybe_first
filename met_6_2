#include <iostream>
#include <iomanip>
using namespace std;
int main() {
	int n; cin >> n;
	int* a = new int[n];
	for (int i = 0; i < n; i++) {
		cin >> a[i];
	}
	cout << endl;
	int mx = -1;
	int mx_index = -1;
	int mn = 1e9;
	int mn_index = -1;
	for (int i = 0; i < n; i++) {
		if (a[i] > mx) {
			mx = a[i];
			mx_index = i;
		}
		if (a[i] < mn) {
			mn = a[i];
			mn_index = i;
		}
	}
	if (mx_index > mn_index) {
		cout << "Максимальный элемент встречается после минимального";
	}
	else {
		int sum = 0;
		for (int i = mx_index + 1; i < mn_index; i++) {
			sum += a[i];
		}
		cout << sum;
	}
}
